@{

    if (Session["usuario"] == null)
    {
        Response.Redirect(Url.Action("Login", "CAUsuarios", new { urlRetorno = Request.Url.AbsolutePath }));
        return;
    }


    ProjetoRole.Models.CAUsuario usuario = (ProjetoRole.Models.CAUsuario)Session["usuario"];
}

<div id="navigation">
    <div class="profile-picture">
        <a href="@Url.Action("MeusDados", "CAUsuarios")">
            <img src="~/Arquivos/Imagens/pequenas/@usuario.foto" class="img-circle m-b" width="76" height="76" alt="logo">
        </a>

        <div class="stats-label text-color">
            <span class="font-extra-bold font-uppercase">@usuario.apelido  </span>

            <div class="dropdown">
                <a class="dropdown-toggle" href="#" data-toggle="dropdown">
                    <small class="text-muted">@usuario.nome <b class="caret"></b></small>
                </a>
                <ul class="dropdown-menu animated fadeInRight m-t-xs">
                    <li><a href="@Url.Action("IndexInterno", "Home")">Meus Passeios / Eventos</a></li>
                    <li><a href="@Url.Action("index", "Motoes")">Minhas Motos</a></li>
                    <li><a href="@Url.Action("MeusDados", "CAUsuarios")">Meus Dados</a></li>
                    <li class="divider"></li>
                    <li><a href="@Url.Action("LogOff", "CAUsuarios")">Sair</a></li>
                </ul>
            </div>
            
        </div>
    </div>

    <ul class="nav metismenu" id="side-menu">
        <li class="@Html.IsSelected(controller: "Home")">
            <a href="@Url.Action("IndexInterno", "Home")"> <span class="nav-label">Página Inicial</span>  </a>
        </li>
       
        <li class="@Html.IsSelected(controller: "Roles")">
            <a href="#"><span class="nav-label">Rolés / Eventos</span><span class="fa arrow"></span> </a>
            <ul class="nav nav-second-level">
                <li class="@Html.IsSelected(action: "Index")"><a href="@Url.Action("Inder", "Roles")">Listar</a></li>
                <li class="@Html.IsSelected(action: "Create")"><a href="@Url.Action("Create", "Roles")">Cadastrar Novos</a></li>
                <li class="@Html.IsSelected(action: "MeusRoles")"><a href="@Url.Action("MeusRoles", "Roles")">Meus Rolés</a></li>
                <li class="@Html.IsSelected(action: "Passados")"><a href="@Url.Action("Passados", "Roles")">Que Já Aconteceram</a></li>
            </ul>
        </li>
        <li class="@Html.IsSelected(controller: "CAUsuarios")">
            <a href="#"><span class="nav-label">Meu Cadastro</span><span class="fa arrow"></span> </a>
            <ul class="nav nav-second-level">
                <li class="@Html.IsSelected(action: "MeusDados")"><a href="@Url.Action("MeusDados", "CAUsuarios")">MEUS DADOS</a></li>
            </ul>
        </li>
      
        <li class="@Html.IsSelected(controller: "Motoes")">
            <a href="@Url.Action("Index", "Motoes")"> <span class="nav-label">Minha(s) Moto(s)</span></a>
        </li>
    </ul>
</div>