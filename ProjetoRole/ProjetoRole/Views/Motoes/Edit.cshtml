@model ProjetoRole.Models.Moto

@{
    ViewBag.Title = "Alterando Informações";
}


<div class="small-header transition animated fadeIn">
    <div class="hpanel">
        <div class="panel-body">
            <div id="hbreadcrumb" class="pull-right">
                <button type="button" class="btn btn-default btn-lg">
                    <span class="fa fa-mail-reply" aria-hidden="true"> </span> @Html.ActionLink("Cancelar / Voltar", "Index")
                </button>
            </div>
            <h2 class="font-light m-b-xs">
                Alterando Informações da Moto
            </h2>
        </div>
    </div>
</div>


<div class="content animate-panel">
    <div class="row">
        <div class="hpanel">
            <div class="panel-body">

                @using (Html.BeginForm("Edit", "Motoes", FormMethod.Post, new
                { enctype = "multipart/form-data", @class = "form-horizontal" } ))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="nome">Nome da Motoca</label>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.nomeMoto, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nomeMoto, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.pkMoto)
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="nome">Selecione a Marca</label>
                        <div class="col-sm-10">
                            @Html.DropDownList("fkMarca", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.fkMarca, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label" for="nome">Modelo</label>
                        <div class="col-sm-10">
                            @Html.EditorFor(model => model.modeloMoto, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.modeloMoto, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        @Html.LabelFor(model => model.foto, htmlAttributes: new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-10">

                            <div class="col-md-2">
                                <img class="img-thumbnail left" src="~/Arquivos/Imagens/Medias/@Html.DisplayFor(model => model.foto)">
                            </div>

                            <input type="file" class="form-control" id="FotoPerfil" name="FotoMoto">
                            <span class="help-block">Formatos: gif, png, jpg. / tam. max: 2Mb</span>
                            @Html.ValidationMessageFor(model => model.modeloMoto, "", new { @class = "text-danger" })
                        </div>
                    </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label" for="nome">Ativa</label>
                            <div class="col-sm-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.ativa)
                                    @Html.ValidationMessageFor(model => model.ativa, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Salvar Informações" class="btn btn-default" />
                            </div>
                        </div>


                }
            </div>
        </div>
    </div>
</div>

